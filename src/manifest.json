{
    "manifest_version": 2,
    "name": "Web Media Controller",
    "version": "0.9.0",
    "description": "__MSG_description__",

    "background": {
        "scripts": [
            "background/main.js"
        ],
        "persistent": true
    },

    "web_accessible_resources": [
        "inject/*.js"
    ],

    "permissions": [
        "<all_urls>",
        "tabs",
        "storage",
        "notifications",
        "nativeMessaging"
    ],

    "commands": {
        "_execute_page_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+U"
            }
        }
    },

    "default_locale": "en",

    "browser_action": {
        "default_title": "__MSG_status_disabled__"
    },

    "options_ui": {
        "page": "options/options.html"
    },

    "content_security_policy": "script-src 'self'; object-src 'self'"
}
