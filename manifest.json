{
    "manifest_version": 2,
    "name": "Web Media Controller",
    "version": "0.8.1",
    "description": "__MSG_description__",

    "background": {
        "scripts": [
            "background/main.js"
        ],
        "persistent": true
    },

    "web_accessible_resources": [
        "inject/*.js"
    ],

    "permissions": [
        "storage",
        "notifications",
        "nativeMessaging"
    ],

    "content_scripts": [{
        "matches": ["*://vk.com/*"],
        "js": [ "connectors/vk.js" ]
    }, {
        "matches": ["*://www.pandora.com/*"],
        "js": [ "connectors/pandora.js" ]
    }, {
        "matches": ["*://*.deezer.com/*"],
        "js": [ "connectors/deezer.js" ]
    }, {
        "matches": ["*://listen.moe/*"],
        "js": [ "connectors/listen.moe.js" ]
    }, {
        "matches": ["*://*.youtube.com/*"],
        "js": [ "connectors/youtube.js" ]
    }, {
        "matches": ["*://play.google.com/music/*"],
        "js": [ "connectors/googlemusic.js" ]
    }, {
        "matches": ["*://open.spotify.com/*"],
        "js": [ "connectors/spotify.js" ]
    }, {
        "matches": ["*://*.invidio.us/*"],
        "js": [ "connectors/invidious.js" ]
    }, {
        "matches": ["*://music.yandex.ru/*", "*://radio.yandex.ru/*"],
        "js": [ "connectors/yandex-music.js" ]
    }],

    "commands": {
        "_execute_page_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+U"
            }
        }
    },

    "default_locale": "en",

    "page_action": {},

    "options_ui": {
        "page": "options/options.html"
    },

    "content_security_policy": "script-src 'self'; object-src 'self'"
}
